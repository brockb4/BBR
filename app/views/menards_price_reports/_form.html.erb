<%= form_tag menards_price_reports_path(:csv), method: "POST" do %>
<table style="width: 90%;">
  <tbody>
    <tr>
      <th colspan="4">Date Range</th>
    </tr>
    <tr>
      <td colspan="4">
        From: <%= text_field "menards_price_reports", "begin_date", class: "datepicker" %><br />
        To: <%= text_field "menards_price_reports", "end_date", class: "datepicker" %>
      </td>
    </tr>

    <tr>
      <th colspan="2"><%= submit_tag 'Generate Price Report' %></th>
    </tr>
  </tbody>
</table>
<% end %>